@model List<ClientMDA.ViewModels.CQANDAViewModel>
@{
    ViewData["Title"] = "Default"; @*購物問題*@
}

<div id="Qbox">
    <div class="accordion" id="accordionExample">
        @foreach (var q in Model.First().購物問題shopQa)
        {
            <div class="card" id="Qcard">
                <div class="card-header" id='heading_@q.購物問題shopQaId'>
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse_@q.購物問題shopQaId" aria-expanded="false" aria-controls="collapse_@q.購物問題shopQaId" id="Qbtn">@q.問題question</button>
                    </h2>
                </div>

                <div id="collapse_@q.購物問題shopQaId" class="collapse" aria-labelledby="heading_@q.購物問題shopQaId" data-parent="#accordionExample">
                    <div class="card-body">@Html.Raw(@q.答案answer)</div>
                </div>
            </div>
        }

    </div>
</div>